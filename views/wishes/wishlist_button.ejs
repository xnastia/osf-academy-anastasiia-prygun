  <% if (user) { %>
      <form method="post" action="/wishlist">
        <input type="hidden" name="product_id" value="<%= product.id %>">
        <a behavior="submit" href="#" class="btn btn-info order-btn" role="button">
    <%= user.wishes.some(wish => wish._id.equals(product._id)) ? 'Remove from wishlist' : 'Add to wishlist' %>
    <span class="glyphicon glyphicon-heart"></span></a>

      </form>
<% } %>